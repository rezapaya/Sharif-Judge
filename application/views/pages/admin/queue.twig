{% set selected = '' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-play{% endblock %}
{% block title %}Submission Queue{% endblock %}
{% block head_title %}Submission Queue{% endblock %}



{% block other_assets %}
<script>
	$(document).ready(function(){
		$(".shj_act").click(function(){
			var action=$(this).attr('id');
			$.post(
					'{{ site_url('queue') }}/'+action,
					{shj_csrf_token: shj.csrf_token},
					function(data){
						if (data=='success')
							location.reload();
					}
			);
		});
	});
</script>
{% endblock %}



{% block main_content %}
<p>
	{% if working %}
		<i class="splashy-media_controls_dark_play"></i> Queue is working
	{% else %}
		<i class="splashy-media_controls_dark_pause"></i> Queue is not working
	{% endif %}
	| Total submissions in queue: {{ queue|length }}
</p>
<p>
	<a href="#" class="shj_act" id="pause"><i class="splashy-media_controls_pause_small"></i> Pause</a> |
	<a href="#" class="shj_act" id="resume"><i class="splashy-media_controls_play_small"></i> Resume</a> |
	<a href="#" class="shj_act" id="empty_queue"><i class="splashy-close"></i> Empty Queue</a>
</p>
<table class="sharif_table">
	<thead>
	<tr>
		<th>#</th>
		<th>Submit ID</th>
		<th>Usename</th>
		<th>Assignment</th>
		<th>Problem</th>
		<th>Type (judge/rejudge)</th>
	</tr>
	</thead>
	{% for item in queue %}
		<tr>
			<td>{{ loop.index }}</td>
			<td>{{ item.submit_id }}</td>
			<td>{{ item.username }}</td>
			<td>{{ item.assignment }} (<span dir="auto">{{ all_assignments[item.assignment].name }}</span>)</td>
			<td>{{ item.problem }}</td>
			<td>{{ item.type }}</td>
		</tr>
	{% endfor %}
</table>
{% endblock %}