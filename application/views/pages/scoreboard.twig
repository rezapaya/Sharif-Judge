{% set selected = 'scoreboard' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-star{% endblock %}
{% block title %}Scoreboard{% endblock %}
{% block head_title %}Scoreboard{% endblock %}



{% block main_content %}
{% if assignment.id == 0 %}
<p>No assignment is selected.</p>
{% elseif not assignment.scoreboard %}
<p>Scoreboard is disabled.</p>
{% else %}
	<p>Scoreboard of <span dir="auto">{{ assignment.name }}</span></p>
	{{ scoreboard|raw }}
{% endif %}
{% endblock %} {# main_content #}